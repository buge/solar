{
  "name": "@buge/solar",
  "version": "1.1.0",
  "description": "Solar Position",
  "author": "Philipp Bunge <buge@crimson.ch>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buge/solar.git"
  },
  "homepage": "https://github.com/buge/solar#readme",
  "scripts": {
    "build": "tsc",
    "fix": "prettier --config .prettierrc 'src/**/*.ts' --write && eslint --fix src/**/*.ts",
    "lint": "eslint",
    "test": "mocha -r ts-node/register 'src/**/*_test.ts'",
    "prepare": "npm run build",
    "prepack": "mv build/* .",
    "postpack": "git clean -fd",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run fix && git add -A src",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf build",
    "release": "release-it"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "dependencies": {
    "@buge/ts-units": "^1.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/luxon": "^2.0.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "luxon": "^2.0.2",
    "mocha": "^8.1.3",
    "prettier": "^2.1.1",
    "release-it": "*",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
